<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UpscaylVideo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UpscaylVideo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/AppIcon.ico"
        Title="{Binding PageManager.Title, Mode=OneWay}">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <!-- Removed PanelBackground resource, now using global resource from App.axaml -->
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!--ToolStrip-->
        <Border Grid.Row="0"
                Padding="6"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="6"
        >
            <Grid ColumnDefinitions="*, Auto">
                <ItemsControl Grid.Column="0"
                              ItemsSource="{Binding Path=PageManager.LeftToolbarButtons, Mode=OneWay}"
                              HorizontalAlignment="Left">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button ToolTip.Tip="{Binding Path=Text, Mode=OneWay}"
                                    Command="{Binding Path=Command, Mode=OneWay}"
                                    Padding="8"
                                    Margin="3 0"
                                    IsVisible="{Binding Visible, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="{Binding Path=Icon}"
                                                                Width="24"
                                                                Height="24"/>
                                    <TextBlock IsVisible="{Binding ShowText, Mode=OneWay}"
                                               Text="{Binding Text, Mode=OneWay}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="1"
                              ItemsSource="{Binding Path=PageManager.RightToolbarButtons, Mode=OneWay}"
                              HorizontalAlignment="Right"
                              >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button ToolTip.Tip="{Binding Path=Text, Mode=OneWay}"
                                    Command="{Binding Path=Command, Mode=OneWay}"
                                    Padding="8"
                                    Margin="3,0"
                                    IsVisible="{Binding Visible, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="{Binding Path=Icon}"
                                                                Width="24"
                                                                Height="24"/>
                                    <TextBlock IsVisible="{Binding ShowText, Mode=OneWay}"
                                               Text="{Binding Text, Mode=OneWay}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1">
            <TransitioningContentControl Content="{Binding Path=PageManager.CurrentPage, Mode=OneWay}"
                                         Margin="8">
                <TransitioningContentControl.PageTransition>
                    <PageSlide Orientation="Vertical" Duration="0:00:00.200" />
                </TransitioningContentControl.PageTransition>
            </TransitioningContentControl>
        </ScrollViewer>
        <!-- Progress Panel -->
        <Border Grid.Row="2"
                Margin="8"
                Padding="10"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="8"
                IsVisible="{Binding JobQueueService.IsProcessing, Mode=OneWay}">
            <StackPanel Orientation="Vertical" Spacing="6">
                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding JobQueueService.StatusMessage}"/>
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel>
                        <TextBlock Text="Input:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.CurrentJob.VideoPath, FallbackValue=N/A}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Output:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.CurrentJob.OutputFilePath, FallbackValue=N/A}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Model:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.CurrentJob.SelectedModel.Name, FallbackValue=N/A}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Scale:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.CurrentJob.SelectedScale, FallbackValue=N/A}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel>
                        <TextBlock Text="Frames:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.CompletedFrames}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Total Frames:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.TotalFrames}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="ETA:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.DspEta, TargetNullValue=Calculating..}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Elapsed:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobQueueService.DspElapsedTime}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Upscale Progress:" FontWeight="Bold"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="18" Value="{Binding JobQueueService.Progress}"
                                 ShowProgressText="True"
                                 CornerRadius="6"/>
                </StackPanel>
                <StackPanel Spacing="8" Margin="0,8,0,0">
                    <TextBlock Text="Overall Progress:" FontWeight="Bold"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="18" Value="{Binding JobQueueService.OverallProgress}"
                                 ShowProgressText="True"
                                 CornerRadius="6"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Version Panel -->
        <Border Grid.Row="3" Background="Transparent" Padding="0,2,8,2">
            <TextBlock Text="{Binding Version}" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="12" Foreground="Gray"/>
        </Border>
    </Grid>


</Window>