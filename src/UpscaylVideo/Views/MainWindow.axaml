<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UpscaylVideo"
        xmlns:vm="using:UpscaylVideo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UpscaylVideo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/AppIcon.ico"
        Title="{Binding PageManager.Title, Mode=OneWay}">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <!-- Removed PanelBackground resource, now using global resource from App.axaml -->
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!--ToolStrip-->
        <Border Grid.Row="0"
                Padding="6"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="6"
        >
            <Grid ColumnDefinitions="*, Auto">
                <ItemsControl Grid.Column="0"
                              ItemsSource="{Binding Path=PageManager.LeftToolStripControls, Mode=OneWay}"
                              HorizontalAlignment="Left">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <ItemsControl Grid.Column="1"
                              ItemsSource="{Binding Path=PageManager.RightToolStripControls, Mode=OneWay}"
                              HorizontalAlignment="Right">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1">
            <TransitioningContentControl Content="{Binding Path=PageManager.CurrentPage, Mode=OneWay}"
                                         Margin="8">
                <TransitioningContentControl.PageTransition>
                    <PageSlide Orientation="Vertical" Duration="0:00:00.200" />
                </TransitioningContentControl.PageTransition>
            </TransitioningContentControl>
        </ScrollViewer>
        <!-- Progress Panel -->
        <Border Grid.Row="2"
                Margin="8"
                Padding="10"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="8"
                IsVisible="{Binding JobProcessingService.IsProcessing, Mode=OneWay}">
            <StackPanel Orientation="Vertical" Spacing="6">
                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding JobProcessingService.StatusMessage}"/>
                <Grid Margin="0,0,0,8" ColumnDefinitions="3*,3*,2*,*,*" RowDefinitions="Auto,12,Auto,12,Auto">
                    <!-- First row (5 columns) -->
                    <StackPanel Grid.Column="0" Grid.Row="0">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Input}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.VideoPath, FallbackValue=N/A}" ToolTip.Tip="{Binding JobProcessingService.CurrentJob.VideoPath}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="0">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Output}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.OutputFilePath, FallbackValue=N/A}" ToolTip.Tip="{Binding JobProcessingService.CurrentJob.OutputFilePath}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Grid.Row="0">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Model}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.SelectedModel.Name, FallbackValue=N/A}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Grid.Row="0">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Scale}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.SelectedScale, FallbackValue=N/A}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="4" Grid.Row="0">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_ImageFormat}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.OutputImageFormat, FallbackValue=png}"/>
                    </StackPanel>
                    <!-- Spacer row (12px) -->
                    <!-- Second row (5 columns) -->
                    <StackPanel Grid.Column="0" Grid.Row="2">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Frames}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CompletedFrames}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="2">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_TotalFrames}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.TotalFrames}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Grid.Row="2">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_ETA}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.DspEta, TargetNullValue=Calculating..}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Grid.Row="2">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Elapsed}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.DspElapsedTime}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="4" Grid.Row="2">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_Gpu}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.GpuNumberDisplay}"/>
                    </StackPanel>
                    <!-- Spacer row (12px) -->
                    <!-- Third row (remaining details) -->
                    <StackPanel Grid.Column="0" Grid.Row="4">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_ChunkSize}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.UpscaleFrameChunkSize}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="4">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_TileSize}" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding JobProcessingService.CurrentJob.TileSizeDisplay}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Grid.Row="4" Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="{x:Static local:Localization.MainWindow_DeleteWorkingFolder}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding JobProcessingService.CurrentJob.DeleteWorkingFolderDisplay, FallbackValue=No}"/>
                    </StackPanel>
                </Grid>
                <StackPanel>
                    <TextBlock Text="{x:Static local:Localization.MainWindow_UpscaleProgress}" FontWeight="Bold"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="18" Value="{Binding JobProcessingService.Progress}"
                                 ShowProgressText="True"
                                 CornerRadius="6"/>
                </StackPanel>
                <StackPanel Spacing="8" Margin="0,8,0,0">
                    <TextBlock Text="{x:Static local:Localization.MainWindow_OverallProgress}" FontWeight="Bold"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="18" Value="{Binding JobProcessingService.OverallProgress}"
                                 ShowProgressText="True"
                                 CornerRadius="6"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Version + Update Panel -->
        <Border Grid.Row="3" Background="Transparent" Padding="8">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Spacing="12">
                    <TextBlock Text="{Binding Version}" VerticalAlignment="Center" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="-" VerticalAlignment="Center" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{Binding UpdateService.StatusMessage}" VerticalAlignment="Center" FontSize="12" Foreground="Gray"/>
                </StackPanel>
                <Button Content="{x:Static local:Localization.MainWindow_GetUpdate}"
                        Command="{Binding OpenLatestReleaseCommand}"
                        IsVisible="{Binding UpdateService.IsUpdateAvailable}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        />
            </DockPanel>
        </Border>
    </Grid>


</Window>